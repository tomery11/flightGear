        </Grid.ColumnDefinitions>

        
        <!--adding map view-->
        <Button>Button 1</Button>
        <Button Grid.Column="2" Grid.RowSpan="2">Button 2</Button>
        <Button Grid.ColumnSpan="3">Button 3</Button>
        
        
    </Grid>
